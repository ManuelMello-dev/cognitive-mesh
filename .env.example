# ═══════════════════════════════════════════════
# OpenClaw Gateway Configuration
# ═══════════════════════════════════════════════
# PORT is set by Railway automatically
# For local development, use 8080
PORT=8080

# Internal port for the Python cognitive-mesh server
# The OpenClaw gateway proxies all requests to this port
COGNITIVE_MESH_PORT=8081

# Base URL for the cognitive mesh (used by OpenClaw tools)
COGNITIVE_MESH_BASE_URL=http://127.0.0.1:8081

# ═══════════════════════════════════════════════
# Database Configuration
# ═══════════════════════════════════════════════
# PostgreSQL Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cognitive_mesh
POSTGRES_PASSWORD=password

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# ═══════════════════════════════════════════════
# Financial Data API Keys
# ═══════════════════════════════════════════════
# Yahoo Finance (free, no key required)
# Binance (free, no key required)

# Alpha Vantage (requires free API key from https://www.alphavantage.co/api/)
ALPHA_VANTAGE_API_KEY=

# Polygon.io (requires API key from https://polygon.io/)
POLYGON_IO_API_KEY=

# Alpaca (requires API key from https://alpaca.markets/)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=

# ═══════════════════════════════════════════════
# Logging
# ═══════════════════════════════════════════════
LOG_LEVEL=INFO
LOG_FILE=./logs/cognitive_mesh.log

# ═══════════════════════════════════════════════
# Node Configuration
# ═══════════════════════════════════════════════
NODE_ID=global_mind_01
LISTEN_PORT=5555
PUB_PORT=5556
SUB_PORT=5557

# ═══════════════════════════════════════════════
# Data Provider Configuration
# ═══════════════════════════════════════════════
# Symbols to track (comma-separated)
SYMBOLS=AAPL,MSFT,GOOGL,TSLA,NVDA,BTC,ETH

# Update interval in seconds
UPDATE_INTERVAL=60

# ═══════════════════════════════════════════════
# Circuit Breaker Configuration
# ═══════════════════════════════════════════════
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_RECOVERY_TIMEOUT=60
